{
  "plugins": [
    "prettier",
    "import",
    "@typescript-eslint"
  ],
  "extends": [
    "airbnb-typescript/base",
    "plugin:prettier/recommended",
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:css/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": [
      "./tsconfig.json"
    ],
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "eol-last": [
      "error",
      "always"
    ],
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off",
    //"@typescript-eslint/no-explicit-any": 2,
    "semi-style": [
      "error",
      "last"
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "parser": "@typescript-eslint/parser"
}
